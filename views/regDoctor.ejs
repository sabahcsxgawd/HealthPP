    <div id="alertBox"></div>


    <div class="container">
        <div class="row">
            <h1 align="center" style="color:#3ca507;">Doctor Registration</h1>
            <div class="col-sm-1">

            </div>

            <div class="col-sm-5">
                <form class="needs-validation" novalidate>
                    <div class="mb-3 border-success" id="firstNameDiv">
                        <label for="exampleFormControlInput1" class="form-label" style="color:#3ca507;">First
                            Name</label>
                        <input type="text" class="form-control border-success" id="firstName"
                            placeholder="Enter Your First Name" pattern="[A-Za-z ]{1,50}" value="" required>
                        <div class="invalid-feedback">
                            Please provide a valid firstname;
                        </div>
                    </div>
                    <div class="mb-3 border-success" id="lastNameDiv">
                        <label for="exampleFormControlInput2" class="form-label" style="color:#3ca507;">Last
                            Name</label>
                        <input type="Last Name" class="form-control border-success" id="lastName"
                            placeholder="Enter Your Last Name" pattern="[A-Za-z ]{0,50}" value="" required>
                        <div class="invalid-feedback">
                            Please provide a valid lastname.
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="nidDiv">
                        <label for="exampleFormControlInput1" class="form-label" style="color:#3ca507;">NID</label>
                        <input type="text" class="form-control border-success" id="nid" placeholder="Enter Your NID"
                            pattern="[0-9]{10}" value="" required>
                        <div class="invalid-feedback">
                            Please provide your valid NID;
                        </div>
                    </div>
                    <div class="mb-3 border-success" id="emailDiv">
                        <label for="exampleFormControlInput3" class="form-label" style="color:#3ca507;">Email</label>
                        <input type="Email" class="form-control border-success" id="email" placeholder="abc@gmail.com"
                            value="" required>
                        <div class="invalid-feedback">
                            Please Provide a valid email
                        </div>
                    </div>
                    <div class="mb-3 border-success" id="phoneNumberDiv">
                        <label for="exampleFormControlInput4" class="form-label" style="color:#3ca507;">Phone
                            Number</label>
                        <input type="tel" class="form-control border-success" id="phoneNumber" placeholder="01*********"
                            pattern="01[0-9]{9}" value="" required>
                        <div class="invalid-feedback">
                            Please Provide a valid phone number.
                        </div>

                    </div>

                    <div class="mb-3 border-success" id="dobDiv">
                        <label for="exampleFormControlInput1" class="form-label" style="color:#3ca507;">Date of
                            Birth</label>
                        <div class="input-group input-daterange">
                            <input type="text" id="dob" class="form-control border-success" placeholder="YYYY-MM-DD"
                                value="" readonly autocomplete="off">
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="bloodGroupDiv">
                        <label for="exampleFormControlInput4" class="form-label" style="color:#3ca507;">Blood
                            Group</label>
                        <select id="bloodGroup" class="form-select form-select-sm border-success"
                            aria-label=".form-select-sm example" required>
                            <option selected disabled>Select</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>
                        <div class="invalid-feedback">
                            Please Provide a valid Blood Group
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="genderDiv">
                        <label for="exampleFormControlInput4" class="form-label" style="color:#3ca507;">Gender</label>
                        <select id="gender" class="form-select form-select-sm border-success"
                            aria-label=".form-select-sm example" required>
                            <option selected disabled>Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Others">Others</option>
                        </select>
                        <div class="invalid-feedback">
                            Please Provide a valid Gender
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12" id="visTimeDiv">
                            <label for="exampleFormControlInput4" class="form-label" style="color:#3ca507;">Select
                                Preferred
                                Visiting Time </label> <br>
                            <input class="visTime mb-3 border-success" type="checkbox" value="09:30 AM - 03:00 PM">
                            09:30 AM - 03:00 PM <br>
                            <input class="visTime mb-3 border-success" type="checkbox" value="06:00 PM - 10:00 PM">
                            06:00 PM - 10:00 PM <br>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10" id="degreeDiv">
                            <div class="mb-3 border-success">
                                <label for="exampleFormControlInput4" class="form-label"
                                    style="color:#3ca507;">Degrees</label>
                                <input type="text" class="form-control border-success" id="degree0"
                                    placeholder="Example : FCPS (Medicine)" pattern="[A-Za-z ()]{1,50}" value=""
                                    autocomplete="off">
                                <div class="invalid-feedback">
                                    Please Provide a valid degree
                                </div>
                            </div>

                        </div>
                        <div class="col-sm-2" id="degreeButtons">
                            <div class="mb-3 border-success">
                                <label for="exampleFormControlInput4" class="form-label" style="color:#3ca507;"></label>
                                <button type='button' id='addDegree' onclick="addDegreeField()"> + </button>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="specialityDiv">
                        <label for="exampleFormControlInput4" class="form-label"
                            style="color:#3ca507;">Speciality</label>
                        <select id="speciality" class="form-select form-select-sm border-success"
                            aria-label=".form-select-sm example" required>
                            <option selected disabled>Select</option>
                            <option value="Chest Medicine">Chest Medicine</option>
                            <option value="Colorectal Surgery">Colorectal Surgery</option>
                        </select>
                        <div class="invalid-feedback">
                            Please Provide a valid Speciality
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="addressDiv">
                        <label for="exampleFormControlTextarea1" class="form-label"
                            style="color:#3ca507;">Address</label>
                        <textarea id="address" class="form-control border-success" id="address" rows="3"
                            placeholder="BUET,Azimpur,Road No:**,Dhaka - 6000" value="" required></textarea>
                        <div class="invalid-feedback">
                            Please Provide a valid address
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="passWordDiv">
                        <label for="exampleFormControlInput1" class="form-label" style="color:#3ca507;">Password</label>
                        <input type="password" class="form-control border-success" id="password"
                            placeholder="Enter a Password between 8-16 letters"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}$" value="" required>
                        <div class="invalid-feedback">
                            Please Provide a valid password between 8-16 letters.It must include at least a number,one
                            special character and capital letter.
                        </div>
                    </div>

                    <div class="mb-3 border-success" id="retypePasswordDiv">
                        <label for="exampleFormControlInput1" class="form-label" style="color:#3ca507;">Retype
                            Password</label>
                        <input type="password" class="form-control border-success" id="retypePassword"
                            placeholder="Retype your password"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}$" value="" required>
                        <div class="invalid-feedback">
                            Please retype your password correctly.
                        </div>
                        <p> </p>
                    </div>

                    <div class="form-check" id="termsAndConditionsDiv">
                        <input class="form-check-input border-success" type="checkbox" value="" id="flexCheckDefault"
                            value="" required>
                        <label class="form-check-label border-success" for="flexCheckDefault" style="color:#3ca507;">
                            I will obey the rules and regulations....
                        </label>
                        <div class="invalid-feedback was-validated">
                            Check the box.
                        </div>
                    </div>

                    <div class="d-grid gap-2" id="submitButtonDiv">
                        <button id="submitButton" type="submit" class="btn btn-success">Submit</button>
                    </div>
                </form>

            </div>

            <div class="col-sm-5">
                <img src="images/doctor.png" width="500" height="500" alt="">
            </div>

